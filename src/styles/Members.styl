.moefront-members
  width: 100%
  height: 100%
  background: linear-gradient(135deg, #4D93B8 0%, #4D93B8 30%, #83faff 100%) fixed
  position: relative
  overflow-x: hidden
  oberflow-y: auto
  
  svg
    width: 60px
    height: 60px
    margin: 0px 10px
  
.members-all
  /* display: flex
  justify-content: space-around */
  margin: 0px 20px 0px 20px
  z-index: 0
  
.members-circle
  width: 80px
  height: 80px
  margin: 10px
  border-radius: 50%
  display: inline-block
  cursor: pointer
  position: absolute
  user-select: none
  z-index: 6
  top: 15px
  transition: .3s all ease-in-out
  
  &:hover
    transform: scale(1.08)

.members-circle img
  width: 100%
  height: 100%
  border-radius: 50%
  transition: .3s all ease-in-out
  
.members-circle.circle-current
  width: 120px
  height: 120px
  top: 250px
  left: 50%
  position: absolute
  transform: translateX(-50%) translateY(-50%)
  
  img
    width: 100%
    height: 100%
    
.members-card
  width: 660px
  max-width: calc(100vw - 10px)
  margin: 280px auto 8% auto
  background: #fff
  border-radius: 4px
  opacity: 0
  padding: 0.33 * 120px 20px 10px 20px
  transition: .5s all ease-in-out
  
  &.members-card-active
    opacity: 1
  
  .card-name
    font-size: 36px
    font-family: 'Dancing Script'
    margin: 10px 0px 0px 0px
    text-align: center
    
  .card-nickname
    margin: 0px 20px
    font-size: 16px
  
  .card-status, .card-description
    text-align: center
    margin: 10px 0px 0px 0px
  
  .card-status
    color: #888
    font-size: 12px
    
  .card-button-container
    width: 100%
    text-align: center
    
  .card-read-blog
    width: 200px
    height: 40px
    line-height: 40px
    display: inline-block
    background: #71a9c6
    border-radius: 5px
    text-align: center
    margin: 20px
    transition: .2s all
    
    a
      width: 100%
      height: 100%
      display: block
      color: #fff
      text-decoration: none
      font-size: 14px
      
    a > i
      margin-right: 8px
      
    &:hover
      background: #4d93b8
      
  .card-contact-me
    width: 200px
    height: 40px
    line-height: 40px
    font-size: 14px
    text-align: center
    background: #7fb036
    margin: 20px
    border-radius: 5px    
    color: #fff
    cursor: pointer
    display: inline-block
    transition: .2s all
    &:hover
      background: #99c05e
    i
      margin-right: 8px
    
  .card-skills
    margin: 20px 0px
    text-align: center
    .card-skills-title
      text-align: center
      color: #888
      font-weight: bold
      font-family: 'Dancing Script'
      
  .card-buttons
    margin: 30px 0px 10px 0px
    text-align: center


@media screen and (max-width: 860px)
  .members-circle
    width: 50px
    height: 50px
@media screen and (max-width: 760px)
  .members-card
    margin-bottom: 20%
@media screen and (max-width: 560px)
  .members-circle
    width: 60px
    height: 60px
    
@media screen and (min-width: 1440px)
  .members-circle
    width: 120px
    height: 120px
  .members-circle.circle-current
    width: 160px
    height: 160px

@media screen and (min-height: 850px)
  .members-circle.circle-current
    top: 300px
  .members-card
    margin-top: 350px
    
@media screen and (min-height: 1200px)
  .members-circle.circle-current
    top: 440px
  .members-card
    margin-top: 500px    